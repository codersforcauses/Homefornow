extends layout

block navbar
    .navbar.navbar-default.navbar-fixed-top#navbar-cent
        .container-fluid
            .navbar-header
                a.navbar-brand.navbar-left(href='/', style='padding: 10px;')
                    span
                        img.navbar-left(style="height: 100%;", src='https://static.pexels.com/photos/164516/pexels-photo-164516.jpeg')
                    | &nbsp;#{user.name}
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='#navbar-main')
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
            #navbar-main.navbar-collapse.collapse
                ul.nav.navbar-nav.navbar-right
                    li
                        a(href='#')
                            span.glyphicon.glyphicon-cog
    .container
        block content
    script.
        window.onscroll = function () {
            const nav = document.querySelector('#navbar-cent');
            var navClass = 'navbar navbar-default navbar-fixed-top';
            if (this.scrollY <= 10) {
                nav.className = navClass;
            } else {
                nav.className = navClass + ' material-nav';
            }
        };