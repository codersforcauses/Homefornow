mixin deleteImageModal(imageReference, index)
  .modal.fade(id="deleteimagemodal-image"+index,role="dialog")
      .modal-dialog.modal-sm
          .modal-content
              .modal-header
                button(type='button',data-dismiss='modal').close &times;
                h3 Delete this image?
              .modal-header.text-center
                .image
                  img.img.img-responsive(id='deleteImg' + index, src=imageReference)
              .modal-body.text-center
                  .btn.btn-danger(id="deleteimagebutton-image"+index, onclick="deleteImage(" + index + ")")
                    | Delete
