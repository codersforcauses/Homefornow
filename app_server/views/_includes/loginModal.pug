.modal.fade(id="loginmodal",role="dialog")
    .modal-dialog.modal-md
        .modal-content
            .modal-header
                button(type="button",data-dismiss="modal").close &times;
                h4.modal-title Sign Up
            .modal-body
                form
                    .form-group
                        label(for="email") Email
                        input(type="email",placeholder="e.g. example@example.com").form-control#email
                    .form-group
                        label(for="pwd") Password
                        input(type="password").form-control#pwd
            .modal-footer
                span.pull-right
                    button(type="submit").btn.btn-default Submit
                span.pull-left
                    button(type="button",data-dismiss="modal").btn.btn-default Close
