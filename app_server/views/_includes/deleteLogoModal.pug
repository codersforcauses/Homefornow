mixin deleteLogoModal(uri, logoReference)
  .modal.fade(id="deletelogomodal",role="dialog")
      .modal-dialog.modal-sm
          .modal-content
              .modal-header
                button(type='button',data-dismiss='modal').close &times;
                h3 Delete this logo?
              .modal-header.text-center
                .image
                  img.img.img-responsive(id='deleteLogoImg', src=logoReference)
              .modal-body.text-center
                .btn.btn-danger(id="deletelogobutton", onclick="deleteLogo()")
                  | Delete
