mixin contactModal(serviceName, accommodationId, available, phoneNumber)
    .modal.fade(id="contactmodal"+serviceName.replace(/\s/g,''),role="dialog")
        .modal-dialog.modal-sm
            .modal-content
                .modal-header
                    button(type="button",data-dismiss="modal").close &times;
                    img.img.img-responsive.img-squared(src="https://www.oysterdiving.com/components/com_easyblog/themes/wireframe/images/placeholder-image.png")
                .modal-body
                    .text-center
                        h4=phoneNumber
                        h5= serviceName.replace(/\s/g,'').toLowerCase() + '.com'
                        a(href="#")
                            button.btn.btn-default Call Us
                        if available
                          a(data-toggle="modal", href="#numbermodal"+serviceName.replace(/\s/g,''))
                              button(type="button", data-dismiss="modal").btn.btn-default Call You

    .modal.fade(id="numbermodal"+serviceName.replace(/\s/g,''),role="dialog")
        .modal-dialog.modal-sm
            .modal-content
                .modal-header
                    button(type="button", data-dismiss="modal").close &times;
                    span.pull-left
                        a(data-toggle="modal", href="#contactmodal"+serviceName.replace(/\s/g,''))
                            button(type="button", data-dismiss="modal").close
                                span.glyphicon.glyphicon-arrow-left
                        //- a(data-toggle="modal", href="#numbermodal")
                        //-     button(type="button", data-dismiss="modal").btn.btn-default Calls us
                    img.img.img-responsive.img-squared(src="https://www.oysterdiving.com/components/com_easyblog/themes/wireframe/images/placeholder-image.png")
                .modal-body
                    form
                        .form-group
                            label(for="number") Phone Number
                            input.form-control(type="text", name="number")
                        .text-center
                            label - and/or - 
                        .form-group
                            label(for="email") Email
                            input.form-control(type="text", name="email")
                        .form-group
                            input(type="hidden", name="accommodationId", value=accommodationId)
                        .form-group
                            .text-right                                
                                a(data-toggle="modal", href="#waitmodal"+serviceName.replace(/\s/g,''))
                                    button(data-dismiss="modal", onclick='return submitPhoneNumber(this.parentNode.parentNode.parentNode.parentNode)').btn.btn-default Submit
    .modal.fade(id="waitmodal"+serviceName.replace(/\s/g,''),role="dialog")
        .modal-dialog.modal-sm
            .modal-content
                .modal-header
                    button(type="button", data-dismiss="modal").close &times;
                    span.pull-left
                        a(data-toggle="modal", href="#numbermodal"+serviceName.replace(/\s/g,''))
                            button(type="button", data-dismiss="modal").close
                                span.glyphicon.glyphicon-arrow-left
                        //- a(data-toggle="modal", href="#numbermodal")
                        //-     button(type="button", data-dismiss="modal").btn.btn-default Calls us
                    img.img.img-responsive.img-squared(src="https://www.oysterdiving.com/components/com_easyblog/themes/wireframe/images/placeholder-image.png")
                .modal-body
                    h4 Thank you
                    | We will get back to you soon
