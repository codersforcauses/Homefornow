extends navbarDefault
include _includes/contactModal

block content

  #banner.page-header
    .row
      .col-lg-6
        h1= title
          br
          small #{tagline}
  .row
    each location in locations
      +contactModal(location.name, location._id, location.available, location.phoneNumber)
      .col-xs-12
        .panel.panel-default
          .panel-heading
            a(href='/location?name='+location.name, style="text-decoration: none; color: inherit;")
              h2.panel-title= location.name
          .row
            .col-md-3.col-sm-4.col-xs-12
              a(href='/location/'+location._id)
                img.img-responsive.img-square(src='https://static.pexels.com/photos/164516/pexels-photo-164516.jpeg')
            .col-md-3.hidden-sm.hidden-xs
              .panel-body.text-justify
                |  #{location.description}
            .col-md-3.col-sm-4.col-xs-12
              .panel-body.text-center
                if location.available
                  h4
                    span.text-success
                      span.glyphicon.glyphicon-ok
                      | &nbsp;Avaliable
                else
                  h4
                    span.text-danger
                      span.glyphicon.glyphicon-remove
                      | &nbsp;Not Avaliable
            .col-md-3.col-sm-4.col-xs-12
              .panel-body.text-center
                a(href='#',data-toggle="modal",data-target="#contactmodal"+location.name.replace(/\s/g,''))
                  button.btn.btn-lg.btn-default
                    | Contact
    each dlocation in dlocations
      +contactModal(dlocation.name, dlocation._id, location.available, location.phoneNumber)
      .col-xs-12
        .panel.panel-default
          .panel-heading
            a(href='/location?name='+dlocation.name, style="text-decoration: none; color: inherit;")
              h2.panel-title= dlocation.name
          .row
            .col-md-3.col-sm-4.col-xs-12
              a(href='/location?name='+dlocation.name)
                img.img-responsive.img-square(src='https://static.pexels.com/photos/164516/pexels-photo-164516.jpeg')
            .col-md-3.hidden-sm.hidden-xs
              .panel-body.text-justify
                | #{dlocation.description}
            .col-md-3.col-sm-4.col-xs-12
              .panel-body.text-center
                if dlocation.available
                  h4
                    span.text-success
                      span.glyphicon.glyphicon-ok
                      | &nbsp;Avaliable
                else
                  h4
                    span.text-danger
                      span.glyphicon.glyphicon-remove
                      | &nbsp;Not Avaliable
            .col-md-3.col-sm-4.col-xs-12
              .panel-body.text-center
                a(href='#',data-toggle="modal",data-target="#contactmodal"+dlocation.name.replace(/\s/g,''))
                  button.btn.btn-lg.btn-default
                    | Contact
  script(src='/javascripts/requests.js')
