extends navbarDefault

block content
	.container-fluid
		.row.page-header
			h1 Admin
		.row
			.col-xs-12.col-md-6
				.thumbnail
					.panel-header
						.container-fluid
							h2 Services
					.panel-body.scroll
						.mid-width.wrapItems
							each service in services
								button.accordion= service.name
								.panel
									.row
										.col-xs-6
											each bed in service.beds
												p= bed.gender
										.col-xs-6
											each request in service.requests
												p= request.firstName + ", " + request.createdAt
									.row
										.col-xs-12
											canvas(id="myChart1")
			.col-xs-6
				h2 Assisted/Unassisted Persons
				canvas(id="assistedChart")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.1/Chart.bundle.js")
	script(src="javascripts/adminPage.js")
